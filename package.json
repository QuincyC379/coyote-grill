{
  "name": "coyote-grill",
  "version": "1.0.0",
  "description": "Website and other promotional documents for Lil' Debbie's Coyote Grill",
  "main": "js/bundle.js",
  "scripts": {
    "start": "run-p watch serve",
    "build": "run-p build:*",
    "build:jekyll": "bundle exec jekyll build",
    "build:webpack": "webpack --optimize-minimize --optimize-dedupe",
    "watch": "run-p watch:*",
    "watch:jekyll": "bundle exec jekyll build -w",
    "watch:webpack": "webpack --progress --color --watch",
    "serve": "browser-sync start --server --ss '_site' --files '_site/css/*.css' --no-notify --no-open",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.11.5",
    "babel-preset-es2015": "^6.9.0",
    "browser-sync": "^2.17.5",
    "eslint": "^3.1.1",
    "npm-run-all": "^3.1.1",
    "stylelint": "^7.0.3",
    "stylelint-config-standard": "^11.0.0",
    "webpack": "^1.13.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacobmischka/coyote-grill.git"
  },
  "author": "Jacob Mischka <jacob@coyotegrill.bar>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jacobmischka/coyote-grill/issues"
  },
  "homepage": "https://github.com/jacobmischka/coyote-grill#readme"
}
